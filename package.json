{
  "name": "octra-api",
  "version": "0.1.0",
  "description": "OCTRA REST API",
  "main": "octra-api.js",
  "scripts": {
    "prestart": "npm run compile",
    "compile": "rm -rf build dist && tsc",
    "start": "node build/app.prepare.js && node build/app.dev.js",
    "test": "npm run compile && node build/app.prepare.js && echo '\n Test API...' && mocha --exit",
    "build": "npm run compile && node build/app.prepare.js && rm -rf prod && mkdir prod && cd prod && pkg ../build/app.prod.js -c ../package.json && cd .."
  },
  "author": "Julian Pömp, Christoph Draxler; Institut für Phonetik und Sprachverarbeitung, LMU München",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@godaddy/terminus": "^4.7.0",
    "anchor-js": "^4.3.0",
    "bootstrap": "^4.6.0",
    "clipboard": "^2.0.8",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "del": "^6.0.0",
    "ejs": "^3.1.6",
    "express": "^4.16.3",
    "fs-extra": "^9.1.0",
    "holderjs": "^2.9.9",
    "jquery": "^3.6.0",
    "jsonschema": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "lokijs": "^1.5.5",
    "multer": "^1.3.0",
    "pg": "^8.5.1",
    "pkg": "^4.4.9",
    "popper.js": "^1.16.1",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^4.0.1",
    "@types/del": "^4.0.0",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^9.0.8",
    "@types/lokijs": "^1.5.2",
    "@types/multer": "^1.3.7",
    "@types/node": "^14.14.35",
    "@types/pg": "^7.14.11",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3"
  },
  "repository": {
    "url": "https://github.com/IPS-LMU/octra-api"
  },
  "pkg": {
    "output": "octra-api",
    "scripts": "build/**/*.js",
    "assets": [
      "build/views/**/*",
      "build/static/**/*"
    ],
    "targets": [
      "node12-macos-x64",
      "node12-win-x64",
      "node12-linux-x64"
    ]
  }
}
