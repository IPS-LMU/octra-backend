{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist",
    "target": "ES2020",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "sourceMap": false,
    "removeComments": true
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts",
    "package.json"
  ]
}
